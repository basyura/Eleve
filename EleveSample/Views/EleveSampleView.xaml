<ev:ViewBase x:Class="EleveSample.EleveSampleView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ev="clr-namespace:Eleve;assembly=Eleve"
        xmlns:vm="clr-namespace:EleveSample.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    
    <ev:ViewBase.DataContext>
        <vm:EleveSampleViewModel />
    </ev:ViewBase.DataContext>
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <ev:Execute Action="Initialize" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding Message}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Grid.Row="1" Content="Hello" Width="50" Height="50">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Click">
                    <ev:Execute Action="Hello" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Button>
    </Grid>
</ev:ViewBase>
